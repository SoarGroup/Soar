sp {msg*propose*instr-connected
   (state <s> ^name msg
              ^message <m>)
   (<m> ^first <first>)
   (<first> ^word connected
            ^next <second>)
   (<second> ^word <id1>
             ^next <third>)
   (<third> ^word <dir>
            ^next <fourth>)
   (<fourth> ^word {<> <id1> <id2>}
            ^next nil)
-->
   (<s> ^operator <op> + =)
   (<op> ^name instr-connected
         ^id1 (int <id1>)
         ^dir <dir>
         ^id2 (int <id2>))
}

sp {apply*instr-connected
   (state <s> ^operator <op>
              ^superstate.operator <ss-op>)
   (<op> ^name instr-connected
         ^done true)
-->
   (<ss-op> ^processed true)
}
