}


sp {canvas*draw_rock
   (state <s> ^gs.location <l>
              ^facts.obstacletype <obs>)
   (<obs> ^p1 <obj> ^p2 rock)
   (<l> ^p1 <obj> ^p2 <x> ^p3 <y>)
-->
   (exec draw_rectangle | static | (+ 1 (* <x> 4)) | | (+ 1 (* <y> 4))
| | (- (* (+ <x> 1) 4) 1) | | (- (* (+ <y> 1) 4) 1) | purple |)
}

