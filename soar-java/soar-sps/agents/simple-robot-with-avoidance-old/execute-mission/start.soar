sp {apply*start*mark-start
   (state <s> ^operator <op>
              ^io.input-link.time.seconds <time>
              ^mission.current <c>)
   (<op> ^name start)
  -(<c> ^start-time)
-->
   (<c> ^start-time <time>)
}

sp {apply*start*end-time
   (state <s> ^operator <op>
              ^mission.current <c>)
   (<op> ^name start)
   (<c> ^start-time <st>
        ^delay-time <d>)
-->
   (<c> ^end-time (+ <st> <d>))
}

sp {apply*start*complete
   (state <s> ^operator <op>
              ^io.input-link.time.seconds >= <et> 
              ^mission.current <c>)
   (<op> ^name start)
   (<c> ^end-time <et>)
-->
   (<c> ^status complete)
}
